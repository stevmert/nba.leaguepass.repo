<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="nba.leaguepass.repo" name="nba.leaguepass.repo" version="1.0.0" provider-name="stevmert">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/stevmert/nba.leaguepass.repo/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/stevmert/nba.leaguepass.repo/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/stevmert/nba.leaguepass.repo/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>NBA League Pass repo</summary>
        <description>Repo for the unoffical nba league pass addon, as currently maintained by kokan. Replaces the one no longer maintained by maxgalbu.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="plugin.video.nba"
       name="NBA League Pass II (kokan)"
       version="1.0.2"
       provider-name="ivankokan, ptsampoukas, robla, kokan">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.common.plugin.cache" version="0.9.1"/>
    <import addon="script.module.dateutil" version="2.8.1"/>
    <import addon="script.module.pytz" version="2014.2"/>
    <import addon="script.module.six" version="1.9.0"/>
    <import addon="script.module.pil" version="1.1.7"/>
    <import addon="script.module.inputstreamhelper" version="0.5.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="src/service.py" start="login"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Watch NBA League Pass games.</summary>
    <description>Features: Live, archive and condensed games for the current NBA season, highlights, top plays and other videos, previous seasons starting from 2012/2013. Fanart and thumbnails. Requires a subscription to the NBA International League Pass.</description>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <forum>http://forum.kodi.tv/showthread.php?tid=124716</forum>
    <website>https://github.com/ivankokan/xbmc.plugin.video.nba</website>
    <email></email>
    <source>https://github.com/ivankokan/xbmc.plugin.video.nba</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>

